<mvc:View
  controllerName="fbtool.controller.ProfileInfo"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:f="sap.f"
  displayBlock="true">

  <Page title="User Profile" showHeader="true">
    
    <!-- Back Button -->
    <headerContent>
      <Button
        icon="sap-icon://nav-back"
        text="Back"
        press="onNavBack"
        class="profileInfoBtn subtleBtn"
        type="Transparent" />
    </headerContent>

    <VBox
      width="100%"
      alignItems="Center"
      justifyContent="Center"
      class="sapUiContentPadding sapUiResponsiveMargin">

      <Panel
        width="420px"
        headerText="User Details"
        class="sapUiResponsiveMargin sapUiMediumMargin">

        <VBox class="sapUiMediumMargin" alignItems="Center">

          <Avatar
            displaySize="L"
            src="sap-icon://employee"
            class="sapUiSmallMarginBottom"/>

          <Text text="{user>/fullName}" class="sapUiSmallMarginBottom sapUiMediumFont sapUiStrong"/>
          <Text text="{user>/email}" class="sapUiTinyMarginBottom sapUiSmallFont"/>

          <VBox class="sapUiSmallMarginTop" alignItems="Start">

            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
              <core:Icon src="sap-icon://badge" size="1.2rem" class="sapUiTinyMarginEnd"/>
              <Text text="Personal Nr.: {user>/personalNr}"/>
            </HBox>

            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
              <core:Icon src="sap-icon://factory" size="1.2rem" class="sapUiTinyMarginEnd"/>
              <Text text="Service Unit: {user>/serviceUnit}"/>
            </HBox>

            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
              <core:Icon src="sap-icon://employee-pane" size="1.2rem" class="sapUiTinyMarginEnd"/>
              <Text text="Role: {user>/role}"/>
            </HBox>

            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
              <core:Icon src="sap-icon://employee-pane" size="1.2rem" class="sapUiTinyMarginEnd"/>
              <Text text="Career level: {user>/careerLevel}"/>
            </HBox>

            <HBox alignItems="Center" class="sapUiTinyMarginBottom">
              <core:Icon src="sap-icon://calendar" size="1.2rem" class="sapUiTinyMarginEnd"/>
              <Text text="Fiscal Year: {path: 'user>/fiscalYear', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy'}}"/>
            </HBox>

          </VBox>
        </VBox>
      </Panel>

    </VBox>

  </Page>
</mvc:View>