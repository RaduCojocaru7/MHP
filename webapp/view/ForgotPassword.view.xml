<mvc:View
  controllerName="fbtool.controller.ForgotPassword"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Page id="forgotPasswordPage" showHeader="false" backgroundDesign="Solid">
    <VBox
      alignItems="Center"
      justifyContent="Center"
      width="100%"
      height="100%"
      class="loginBackground">

      <!-- Card mai mic și aliniat la stânga -->
      <VBox
        id="forgotCard"
        width="350px"
        class="loginCard sapUiContentPadding sapUiSmallMargin">

        <!-- Buton de back/X -->
        <Button
          icon="sap-icon://nav-back"
          type="Transparent"
          press="onBackToLogin"
          tooltip="Back to Login"
          class="sapUiTinyMarginBottom"
          width="2.5rem"/>

        <!-- Titlu -->
        <Text text="Reset your password" class="loginTitle sapUiSmallMarginBottom" textAlign="Initial"/>

        <!-- Formular -->
        <Label text="Email address:" labelFor="forgotEmailInput" design="Bold" class="sapUiTinyMarginBottom"/>
        <Input
          id="forgotEmailInput"
          placeholder="Enter your email address"
          width="100%"
          class="sapUiSmallMarginBottom"/>

        <!-- Buton -->
        <Button
          id="requestPasswordButton"
          text="Request New Password"
          type="Emphasized"
          press="onRequestPassword"
          class="sapUiSmallMarginTop"/>
          
      </VBox>
    </VBox>
  </Page>
</mvc:View>
